<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/ripple_rv_item"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/categoryName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:text="@string/default_category_name"
        android:textSize="@dimen/text_size_list_item"
        android:textColor="?attr/colorOnSecondary"
        android:lines="1"
        android:gravity="center_vertical"
        android:maxLength="30"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tickPointImage"/>

    <ImageView
        android:id="@+id/tickPointImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_tick_point"
        android:visibility="gone"
        android:contentDescription="@string/img_tick_point"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/colorPrimary"/>

</androidx.constraintlayout.widget.ConstraintLayout>