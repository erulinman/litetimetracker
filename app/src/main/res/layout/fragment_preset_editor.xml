<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog"
    android:padding="5dp">

    <EditText android:id="@+id/presetNameInput"
        android:layout_width="328dp"
        android:layout_height="70dp"
        android:background="@drawable/shape_edit_text"
        android:inputType="text|textNoSuggestions"
        android:textAlignment="center"
        android:textCursorDrawable="@drawable/shape_edit_text_cursor"
        android:hint="@string/edit_text_preset_name_hint"
        android:textColorHint="@color/gray"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_list_item"
        android:maxLength="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout android:id="@+id/timeInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/presetNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <EditText
            android:id="@+id/hoursInput"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_edit_text"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="40sp"
            android:textAlignment="center"
            android:inputType="time|textNoSuggestions"
            android:maxLength="2" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:src="@drawable/dw_colon" />

        <EditText
            android:id="@+id/minutesInput"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_edit_text"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="40sp"
            android:textAlignment="center"
            android:inputType="time|textNoSuggestions"
            android:maxLength="2"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="70dp"
            android:src="@drawable/dw_colon" />

        <EditText
            android:id="@+id/secondsInput"
            android:layout_width="96dp"
            android:layout_height="70dp"
            android:background="@drawable/shape_edit_text"
            android:textCursorDrawable="@drawable/shape_edit_text_cursor"
            android:textColor="?attr/colorOnSecondary"
            android:textSize="40sp"
            android:textAlignment="center"
            android:inputType="time|textNoSuggestions"
            android:maxLength="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/timeInput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_cancel_button"
            android:textColor="@color/black_hole"
            style="?attr/borderlessButtonStyle"/>

        <Button android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dialog_save_button"
            android:textColor="@color/black_hole"
            style="?attr/borderlessButtonStyle"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>