<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@drawable/shape_rv_list_item"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp">

    <TextView
        android:id="@+id/presetTime"
        android:background="@drawable/shape_rv_list_item"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingHorizontal="8dp"
        android:textSize="@dimen/text_size_list_item"
        android:textColor="?attr/colorOnSecondary"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="@string/tool_text_view_timer_time"/>

    <TextView
        android:id="@+id/presetName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:textSize="@dimen/text_size_list_item"
        android:textColor="?attr/colorOnSecondary"
        android:lines="1"
        android:maxLength="20"
        android:ellipsize="end"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/presetTime"
        app:layout_constraintEnd_toStartOf="@+id/tickPointImage"
        tool:text="@string/tool_item_preset_name"/>

    <ImageView
        android:id="@+id/tickPointImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_tick_point"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="?attr/colorPrimary"
        tool:visibility="visible"
        android:contentDescription="@string/image_view_content_description" />

</androidx.constraintlayout.widget.ConstraintLayout>