<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/ripple_rv_item">

    <TextView
        android:id="@+id/presetTime"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/shape_rv_item_preset_time"
        android:gravity="center"
        android:paddingHorizontal="8dp"
        android:text="@string/tv_timer_base"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/presetName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="12dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="1"
        android:maxLength="20"
        android:text="@string/default_preset_name"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="@dimen/text_size_list_item"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/presetTime"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>