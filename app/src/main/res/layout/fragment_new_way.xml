<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_shape"
    android:padding="5dp">

    <EditText android:id="@+id/wayNameInput"
        android:layout_width="328dp"
        android:layout_height="70dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/edit_text_way_name_hint"
        android:inputType="text|textNoSuggestions"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="32sp"
        android:maxLength="20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText android:id="@+id/wayDescriptionInput"
        android:layout_width="328dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_text_shape"
        android:hint="@string/edit_text_way_description_hint"
        android:inputType="textCapSentences|textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textColorHint="@color/hint"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        android:textSize="32sp"
        android:maxLength="50"
        app:layout_constraintTop_toBottomOf="@+id/wayNameInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/wayDescriptionInput"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"/>

        <Button android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:textColor="@color/black"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>