<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="info.erulinman.lifetimetracker">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_clock_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_clock_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.LifeTimeTracker">

        <service
            android:name=".model.TimerService"
            android:enabled="true"
            android:exported="true" />

        <activity android:name=".ui.WayListActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.PresetActivity"
            android:parentActivityName=".ui.WayListActivity"/>
        <activity
            android:name=".ui.AddWayActivity"
            android:parentActivityName=".ui.WayListActivity"/>
        <activity
            android:name=".ui.TimerActivity"
            android:parentActivityName=".ui.PresetActivity"/>

    </application>

</manifest>